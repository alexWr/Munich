<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3498db"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3498db"
        android:layout_weight="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:src="@drawable/user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3498db"
            android:orientation="vertical">
            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/firstNameEdit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="First Name"
                flatui:fl_theme="@array/dark"
                flatui:fl_fontFamily="roboto"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                flatui:fl_borderWidth="5dp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_size="20dp">
            </com.cengalabs.flatui.views.FlatEditText>
            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/secondNameEdit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:text="Last Name"
                flatui:fl_theme="@array/dark"
                flatui:fl_fontFamily="roboto"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                flatui:fl_borderWidth="5dp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_size="20dp">
            </com.cengalabs.flatui.views.FlatEditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3498db"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/change"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Change"
            flatui:fl_theme="@array/dark"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:textColor="#000000"
            android:text="@string/interest"
            android:textSize="20sp"/>
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/my_interestEdit"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:text="chat, girls, tits, rock, beer, bears"
            android:gravity="top"
            flatui:fl_theme="@array/dark"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf"
            flatui:fl_borderWidth="5dp"
            flatui:fl_cornerRadius="5dp"
            flatui:fl_size="20dp">
        </com.cengalabs.flatui.views.FlatEditText>
        <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:text="Save"
            flatui:fl_theme="@array/dark"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>