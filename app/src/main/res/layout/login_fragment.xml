<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#303040">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Enter mail"
            android:textCursorDrawable="@null"
            android:textColor="#000000"
            android:cursorVisible="true"
            flatui:fl_theme="@array/sea"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf"
            flatui:fl_borderWidth="5dp"
            flatui:fl_cornerRadius="5dp"
            flatui:fl_size="20dp">
        </com.cengalabs.flatui.views.FlatEditText>
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textCursorDrawable="@null"
            android:hint="Enter password"
            android:layout_marginTop="50dp"
            android:cursorVisible="true"
            android:inputType="textPassword"
            android:textColor="#000000"
            flatui:fl_theme="@array/sea"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf"
            flatui:fl_borderWidth="5dp"
            flatui:fl_cornerRadius="5dp"
            flatui:fl_size="20dp">
        </com.cengalabs.flatui.views.FlatEditText>
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/enter"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="120dp"
            android:text="Login"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"/>
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/registration"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="170dp"
            android:text="Registration"
            flatui:fl_theme="@array/sky"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/facebook"
        style="@style/ButtonText"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:background="@drawable/layers_fb_button_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"
        android:layout_gravity="right"/>
    <Button
        android:id="@+id/twitter"
        style="@style/ButtonText"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:background="@drawable/layers_tw_button_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="right"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"/>
    <Button
        android:id="@+id/vk"
        style="@style/ButtonText"
        android:layout_marginTop="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:layout_margin="4dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"
        android:layout_gravity="right"
        android:background="@drawable/layers_vk_button_bg"/>
    <Button
        android:id="@+id/googleplus"
        style="@style/ButtonText"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"
        android:background="@drawable/layers_gp_button_bg"/>
</LinearLayout>