<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3498db"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3498db"
        android:layout_weight="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:src="@drawable/user"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3498db"
            android:orientation="vertical">
            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/firstName"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:cursorVisible="false"
                android:editable="false"
                android:text="First Name"
                flatui:fl_theme="@array/dark"
                flatui:fl_fontFamily="roboto"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                flatui:fl_borderWidth="5dp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_size="20dp">
            </com.cengalabs.flatui.views.FlatEditText>
            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/secondName"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:cursorVisible="false"
                android:editable="false"
                android:text="Last Name"
                flatui:fl_theme="@array/dark"
                flatui:fl_fontFamily="roboto"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                flatui:fl_borderWidth="5dp"
                flatui:fl_cornerRadius="5dp"
                flatui:fl_size="20dp">
            </com.cengalabs.flatui.views.FlatEditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3498db"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#000000"
            android:text="@string/interest"
            android:textSize="20sp"/>
        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/my_interest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:cursorVisible="false"
            android:editable="false"
            android:text="chat, girls, tits, rock, beer, bears"
            android:gravity="top"
            flatui:fl_theme="@array/dark"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf"
            flatui:fl_borderWidth="5dp"
            flatui:fl_cornerRadius="5dp"
            flatui:fl_size="20dp">
        </com.cengalabs.flatui.views.FlatEditText>
        </LinearLayout>
</LinearLayout><!-- From: file:/home/hotyun_a/Документы/MunichOpt/app/src/main/res/layout/show_user_profile.xml -->